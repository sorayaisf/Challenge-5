<!DOCTYPE html>
<html lang="en">


<body>

    <header>
        <%- include('partials/header'); %>
    </header>


    <div class="container" style="margin-top: 100px">
        <div class="row">
            <div class="col-lg-6 col-sm-12 m-auto">
                <div class="card p-5">
                    <h1 class="mb-5">Register</h1>

                    <form action="/signup" method="POST" class="row g-3">
                        <div class="mb-3 row email">
                            <label for="staticEmail" class="col-sm-4 col-form-label">
                                Email
                            </label>
                            <div class="col-sm-8">
                                <input type="email" name="email" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3 row password">
                            <label for="inputPassword" class="col-sm-4 col-form-label">
                                Password
                            </label>
                            <div class="col-sm-8">
                                <input type="password" name="password" class="form-control" />
                            </div>
                        </div>

                        <div class="row m-auto signup">
                            <button type="submit" class="btn btn-primary text-right float-end mb-3"
                                style="width: 125px; margin-right: 20px;">
                                Sign Up
                            </button>
                            <a href="/">&laquo; Go Back</a>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <header>
        <%- include('partials/footer'); %>
    </header>
</body>

</html>